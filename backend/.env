# AI Force Migration Platform - Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Frontend URL (fixed port assignment)
FRONTEND_URL=http://localhost:8081

# Database Configuration
# Local PostgreSQL (for development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/migration_db

# Railway.app will automatically provide DATABASE_URL in production
# No need to set it manually for Railway deployment

# DeepInfra API Configuration (Primary AI Provider)
DEEPINFRA_API_KEY=U8JskPYWXprQvw2PGbv4lyxfcJQggI48
DEEPINFRA_MODEL=meta-llama/Llama-4-Maverick-17B-128E-Instruct-FP8
DEEPINFRA_BASE_URL=https://api.deepinfra.com/v1/inference


# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (comma-separated list)
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:3000,http://localhost:5173

# WebSocket Settings
WS_HEARTBEAT_INTERVAL=30

# CrewAI Configuration (Using DeepInfra)
CREWAI_MODEL=meta-llama/Llama-4-Maverick-17B-128E-Instruct-FP8
CREWAI_TEMPERATURE=0.7
CREWAI_MAX_TOKENS=2048

# Migration Platform Settings
MAX_ASSETS_PER_SCAN=1000
DEFAULT_MIGRATION_TIMELINE_DAYS=90

# Railway.app specific (automatically set by Railway)
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=your-project-id
# RAILWAY_SERVICE_ID=your-service-id # ChromaDB configuration (not using OpenAI embeddings)
CHROMA_OPENAI_API_KEY=not_needed_using_deepinfra
CREWAI_ENABLED=true
