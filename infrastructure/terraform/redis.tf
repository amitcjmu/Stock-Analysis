# Redis Infrastructure as Code
# Generated by CC DevSecOps Engineer
# Terraform configuration for Redis deployment across multiple environments

terraform {
  required_version = ">= 1.0"
  required_providers {
    upstash = {
      source  = "upstash/upstash"
      version = "~> 1.5"
    }
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
    digitalocean = {
      source  = "digitalocean/digitalocean"
      version = "~> 2.0"
    }
    random = {
      source  = "hashicorp/random"
      version = "~> 3.4"
    }
  }

  backend "s3" {
    # Configure your S3 backend
    bucket = var.terraform_state_bucket
    key    = "redis/terraform.tfstate"
    region = var.aws_region
  }
}

# Variables
variable "environment" {
  description = "Environment name (dev, staging, prod)"
  type        = string
  validation {
    condition     = contains(["dev", "staging", "prod"], var.environment)
    error_message = "Environment must be dev, staging, or prod."
  }
}

variable "project_name" {
  description = "Project name"
  type        = string
  default     = "ai-modernize-migration"
}

variable "aws_region" {
  description = "AWS region"
  type        = string
  default     = "us-east-1"
}

variable "terraform_state_bucket" {
  description = "S3 bucket for Terraform state"
  type        = string
}

variable "upstash_api_key" {
  description = "Upstash API key"
  type        = string
  sensitive   = true
}

variable "upstash_email" {
  description = "Upstash account email"
  type        = string
  sensitive   = true
}

variable "redis_memory_limit" {
  description = "Redis memory limit in MB"
  type        = number
  default     = 256
}

variable "enable_tls" {
  description = "Enable TLS encryption"
  type        = bool
  default     = true
}

variable "enable_persistence" {
  description = "Enable Redis persistence"
  type        = bool
  default     = true
}

variable "backup_retention_days" {
  description = "Backup retention in days"
  type        = number
  default     = 7
}

variable "monitoring_enabled" {
  description = "Enable monitoring and alerting"
  type        = bool
  default     = true
}

# Local values for resource naming
locals {
  resource_prefix = "${var.project_name}-${var.environment}"

  redis_config = {
    dev = {
      memory_mb          = 128
      max_connections    = 100
      eviction_policy    = "allkeys-lru"
      backup_enabled     = false
      monitoring_enabled = false
    }
    staging = {
      memory_mb          = 256
      max_connections    = 500
      eviction_policy    = "allkeys-lru"
      backup_enabled     = true
      monitoring_enabled = true
    }
    prod = {
      memory_mb          = 1024
      max_connections    = 1000
      eviction_policy    = "allkeys-lru"
      backup_enabled     = true
      monitoring_enabled = true
    }
  }

  current_config = local.redis_config[var.environment]

  tags = {
    Environment = var.environment
    Project     = var.project_name
    ManagedBy   = "terraform"
    Service     = "redis"
    CreatedBy   = "cc-devsecops-engineer"
  }
}

# Generate secure passwords
resource "random_password" "redis_password" {
  length  = 32
  special = true
}

resource "random_password" "redis_app_password" {
  length  = 32
  special = true
}

resource "random_password" "redis_admin_password" {
  length  = 32
  special = true
}

resource "random_password" "redis_monitor_password" {
  length  = 32
  special = true
}

# Upstash Redis Database (Primary - for Vercel/Production)
resource "upstash_redis_database" "main" {
  count = var.environment == "prod" ? 1 : 0

  database_name = "${local.resource_prefix}-redis"
  region        = "us-east-1"
  tls           = var.enable_tls

  # Security configuration
  eviction = local.current_config.eviction_policy

  # Advanced settings
  consistent = true

  # Multi-zone configuration for high availability
  multi_zone = var.environment == "prod" ? true : false
}

# AWS ElastiCache Redis (Alternative for AWS deployments)
resource "aws_elasticache_subnet_group" "redis" {
  count      = var.environment != "dev" ? 1 : 0
  name       = "${local.resource_prefix}-redis-subnet-group"
  subnet_ids = data.aws_subnets.private.ids

  tags = local.tags
}

resource "aws_elasticache_parameter_group" "redis" {
  count  = var.environment != "dev" ? 1 : 0
  family = "redis7.x"
  name   = "${local.resource_prefix}-redis-params"

  # Security parameters
  parameter {
    name  = "maxmemory-policy"
    value = local.current_config.eviction_policy
  }

  parameter {
    name  = "timeout"
    value = "300"
  }

  parameter {
    name  = "tcp-keepalive"
    value = "300"
  }

  # Disable dangerous commands for security
  parameter {
    name  = "rename-command-config"
    value = "CONFIG_b840fc02d524045429941cc15f59e41cb7be6c52"
  }

  tags = local.tags
}

resource "aws_elasticache_replication_group" "redis" {
  count = var.environment != "dev" ? 1 : 0

  replication_group_id         = "${local.resource_prefix}-redis"
  description                  = "Redis cluster for ${var.project_name} ${var.environment}"

  # Instance configuration
  node_type                    = var.environment == "prod" ? "cache.t3.medium" : "cache.t3.micro"
  port                         = 6379
  parameter_group_name         = aws_elasticache_parameter_group.redis[0].name

  # Cluster configuration
  num_cache_clusters           = var.environment == "prod" ? 2 : 1

  # Security configuration
  subnet_group_name            = aws_elasticache_subnet_group.redis[0].name
  security_group_ids           = [aws_security_group.redis[0].id]

  # Encryption
  at_rest_encryption_enabled   = true
  transit_encryption_enabled   = var.enable_tls
  auth_token                   = var.enable_tls ? random_password.redis_password.result : null

  # Backup configuration
  snapshot_retention_limit     = local.current_config.backup_enabled ? var.backup_retention_days : 0
  snapshot_window             = "03:00-05:00"
  maintenance_window          = "sun:05:00-sun:07:00"

  # Auto failover
  automatic_failover_enabled   = var.environment == "prod" ? true : false
  multi_az_enabled            = var.environment == "prod" ? true : false

  # Monitoring
  notification_topic_arn      = var.monitoring_enabled ? aws_sns_topic.redis_alerts[0].arn : null

  # Logging
  log_delivery_configuration {
    destination      = aws_cloudwatch_log_group.redis[0].name
    destination_type = "cloudwatch-logs"
    log_format       = "json"
    log_type         = "slow-log"
  }

  tags = local.tags
}

# Security Group for AWS ElastiCache
resource "aws_security_group" "redis" {
  count = var.environment != "dev" ? 1 : 0

  name_prefix = "${local.resource_prefix}-redis-"
  vpc_id      = data.aws_vpc.main.id
  description = "Security group for Redis cluster"

  # Allow Redis access from application servers only
  ingress {
    from_port       = 6379
    to_port         = 6379
    protocol        = "tcp"
    security_groups = [aws_security_group.app_servers[0].id]
    description     = "Redis access from application servers"
  }

  # Allow monitoring access
  ingress {
    from_port       = 6379
    to_port         = 6379
    protocol        = "tcp"
    security_groups = [aws_security_group.monitoring[0].id]
    description     = "Redis monitoring access"
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
    description = "All outbound traffic"
  }

  tags = merge(local.tags, {
    Name = "${local.resource_prefix}-redis-sg"
  })
}

# Application servers security group
resource "aws_security_group" "app_servers" {
  count = var.environment != "dev" ? 1 : 0

  name_prefix = "${local.resource_prefix}-app-"
  vpc_id      = data.aws_vpc.main.id
  description = "Security group for application servers"

  tags = merge(local.tags, {
    Name = "${local.resource_prefix}-app-sg"
  })
}

# Monitoring security group
resource "aws_security_group" "monitoring" {
  count = var.environment != "dev" ? 1 : 0

  name_prefix = "${local.resource_prefix}-monitoring-"
  vpc_id      = data.aws_vpc.main.id
  description = "Security group for monitoring services"

  tags = merge(local.tags, {
    Name = "${local.resource_prefix}-monitoring-sg"
  })
}

# CloudWatch Log Group for Redis
resource "aws_cloudwatch_log_group" "redis" {
  count = var.environment != "dev" ? 1 : 0

  name              = "/aws/elasticache/${local.resource_prefix}-redis"
  retention_in_days = var.environment == "prod" ? 30 : 7

  tags = local.tags
}

# SNS Topic for Redis Alerts
resource "aws_sns_topic" "redis_alerts" {
  count = var.monitoring_enabled ? 1 : 0

  name = "${local.resource_prefix}-redis-alerts"

  tags = local.tags
}

# CloudWatch Alarms for Redis Monitoring
resource "aws_cloudwatch_metric_alarm" "redis_cpu_high" {
  count = var.environment != "dev" && var.monitoring_enabled ? 1 : 0

  alarm_name          = "${local.resource_prefix}-redis-cpu-high"
  comparison_operator = "GreaterThanThreshold"
  evaluation_periods  = "2"
  metric_name         = "CPUUtilization"
  namespace           = "AWS/ElastiCache"
  period              = "300"
  statistic           = "Average"
  threshold           = "80"
  alarm_description   = "This metric monitors redis cpu utilization"
  alarm_actions       = [aws_sns_topic.redis_alerts[0].arn]

  dimensions = {
    CacheClusterId = aws_elasticache_replication_group.redis[0].id
  }

  tags = local.tags
}

resource "aws_cloudwatch_metric_alarm" "redis_memory_high" {
  count = var.environment != "dev" && var.monitoring_enabled ? 1 : 0

  alarm_name          = "${local.resource_prefix}-redis-memory-high"
  comparison_operator = "GreaterThanThreshold"
  evaluation_periods  = "2"
  metric_name         = "DatabaseMemoryUsagePercentage"
  namespace           = "AWS/ElastiCache"
  period              = "300"
  statistic           = "Average"
  threshold           = "85"
  alarm_description   = "This metric monitors redis memory utilization"
  alarm_actions       = [aws_sns_topic.redis_alerts[0].arn]

  dimensions = {
    CacheClusterId = aws_elasticache_replication_group.redis[0].id
  }

  tags = local.tags
}

resource "aws_cloudwatch_metric_alarm" "redis_connection_high" {
  count = var.environment != "dev" && var.monitoring_enabled ? 1 : 0

  alarm_name          = "${local.resource_prefix}-redis-connections-high"
  comparison_operator = "GreaterThanThreshold"
  evaluation_periods  = "2"
  metric_name         = "CurrConnections"
  namespace           = "AWS/ElastiCache"
  period              = "300"
  statistic           = "Average"
  threshold           = local.current_config.max_connections * 0.8
  alarm_description   = "This metric monitors redis connection count"
  alarm_actions       = [aws_sns_topic.redis_alerts[0].arn]

  dimensions = {
    CacheClusterId = aws_elasticache_replication_group.redis[0].id
  }

  tags = local.tags
}

# AWS Systems Manager Parameters for secrets
resource "aws_ssm_parameter" "redis_passwords" {
  for_each = {
    "redis_password"         = random_password.redis_password.result
    "redis_app_password"     = random_password.redis_app_password.result
    "redis_admin_password"   = random_password.redis_admin_password.result
    "redis_monitor_password" = random_password.redis_monitor_password.result
  }

  name  = "/${var.project_name}/${var.environment}/redis/${each.key}"
  type  = "SecureString"
  value = each.value

  tags = local.tags
}

# Data sources
data "aws_vpc" "main" {
  filter {
    name   = "tag:Name"
    values = ["${var.project_name}-${var.environment}-vpc"]
  }
}

data "aws_subnets" "private" {
  filter {
    name   = "vpc-id"
    values = [data.aws_vpc.main.id]
  }

  filter {
    name   = "tag:Type"
    values = ["private"]
  }
}

# Outputs
output "redis_endpoint" {
  description = "Redis endpoint URL"
  value = var.environment == "prod" && length(upstash_redis_database.main) > 0 ? upstash_redis_database.main[0].endpoint : (
    var.environment != "dev" ? aws_elasticache_replication_group.redis[0].primary_endpoint_address : "localhost:6379"
  )
  sensitive = false
}

output "redis_port" {
  description = "Redis port"
  value = var.environment == "prod" && length(upstash_redis_database.main) > 0 ? upstash_redis_database.main[0].port : 6379
}

output "redis_connection_url" {
  description = "Redis connection URL"
  value = var.environment == "prod" && length(upstash_redis_database.main) > 0 ? upstash_redis_database.main[0].endpoint : (
    var.environment != "dev" ? "rediss://${aws_elasticache_replication_group.redis[0].primary_endpoint_address}:6379" : "redis://localhost:6379"
  )
  sensitive = true
}

output "redis_auth_token" {
  description = "Redis authentication token"
  value       = random_password.redis_password.result
  sensitive   = true
}

output "redis_ssl_enabled" {
  description = "Whether SSL/TLS is enabled"
  value       = var.enable_tls
}

output "monitoring_enabled" {
  description = "Whether monitoring is enabled"
  value       = var.monitoring_enabled
}

output "backup_enabled" {
  description = "Whether backups are enabled"
  value       = local.current_config.backup_enabled
}

output "redis_memory_limit_mb" {
  description = "Redis memory limit in MB"
  value       = local.current_config.memory_mb
}

output "security_group_id" {
  description = "Redis security group ID"
  value       = var.environment != "dev" ? aws_security_group.redis[0].id : null
}

output "cloudwatch_log_group" {
  description = "CloudWatch log group for Redis"
  value       = var.environment != "dev" ? aws_cloudwatch_log_group.redis[0].name : null
}

output "sns_topic_arn" {
  description = "SNS topic ARN for Redis alerts"
  value       = var.monitoring_enabled ? aws_sns_topic.redis_alerts[0].arn : null
}
